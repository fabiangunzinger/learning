library(shiny)
library(r2d3)
ui <- fluidPage(
sliderInput("max", "Max values", min = 1, max = 10, value = 0.2, step = 0.1),
d3Output("d3")
)
server <- function(input, output, session) {
output$d3 <- renderD3({
r2d3(
runif(10, 0, input$max),
script = system.file("map.js", package = "r2d3")
)
})
}
shinyApp(ui, server)
